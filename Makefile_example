ifeq ($(HOSTTYPE),)
	HOSTTYPE := $(shell uname -m)_$(shell uname -s)
endif

NAME	= libft_malloc_$(HOSTTYPE).so
FILES	= malloc.c
SRCS	= $(addprefix src/, $(FILES))
OBJS	= $(SRCS:src/%.c=.obj/%.o)
INC		= -I include -I libft/includes
FLAGS	= -Wall -Wextra -Werror
LIB		= -L libft -lft
CC		= gcc

all: $(NAME)

$(NAME): $(OBJS)
	@echo "\033[96m                  by üèÄ seng\033[97m         "
	@echo "\033[91mCompiling üòá\033[97m"
		@make -C libft
		#@$(CC) $(FLAGS) $(SRCS) -o $(NAME) $(INC) $(LIB)
		@$(CC) -shared -o $(NAME) $(OBJS) $(LIB)
		@ln -s $(NAME) libft_malloc.so
		@echo "\033[90mDone üòé\033[97m"
.obj/%.o: src/%.c
	mkdir -p .obj
	@$(CC) -c $< -o $@ $(FLAGS) $(INC)

clean:
	@echo "\033[92mDeleting üíÄ\033[97m"
	@rm -rf .obj
	@make clean -C libft
	@echo "\033[96mClean done üò°\033[97m"

fclean: clean
	@echo "\033[92mDeleting üíÄ\033[97m"
	@make fclean -C libft
	@rm -f $(NAME)
	@echo "\033[96mFclean Done üëø\033[97m"
	@rm -f libft_malloc.so libft_malloc_x86_64_Darwin.so

re: fclean all

.PHONY: all clean fclean re
